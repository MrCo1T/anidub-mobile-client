<resources xmlns:tools="http://schemas.android.com/tools">
    
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
        <item name="android:fontFamily">@font/sf_regular</item>


    </style>

    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/slide_out_right</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_bg</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">@font/sf_bold</item>
        <item name="android:textColor">#444655</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <!--<item name="colorControlActivated">@color/lightGrey</item>-->
    </style>

</resources>
